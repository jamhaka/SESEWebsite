@page
@model SESEWebsite.Pages.Payments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TransactionModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TransactionModel.Name" class="control-label"></label>
                <input asp-for="TransactionModel.Name" class="form-control" />
                <span asp-validation-for="TransactionModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionModel.Amount" class="control-label"></label>
                <input asp-for="TransactionModel.Amount" class="form-control" />
                <span asp-validation-for="TransactionModel.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionModel.Email" class="control-label"></label>
                <input asp-for="TransactionModel.Email" class="form-control" />
                <span asp-validation-for="TransactionModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionModel.TxrRef" class="control-label"></label>
                <input asp-for="TransactionModel.TxrRef" class="form-control" />
                <span asp-validation-for="TransactionModel.TxrRef" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TransactionModel.Status" /> @Html.DisplayNameFor(model => model.TransactionModel.Status)
                </label>
            </div>
            <input type="hidden" asp-for="TransactionModel.Id" />
            <div class="form-group">
                <label asp-for="TransactionModel.RegistredDate" class="control-label"></label>
                <input asp-for="TransactionModel.RegistredDate" class="form-control" />
                <span asp-validation-for="TransactionModel.RegistredDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TransactionModel.IsDeleted" /> @Html.DisplayNameFor(model => model.TransactionModel.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
