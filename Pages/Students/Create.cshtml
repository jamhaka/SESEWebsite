@page
@using SESEWebsite.Models.Enum
@model SESEWebsite.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Register";
}
<h1>Welcome To Sambauna English Academy Registration Portal</h1>

<h4>Register</h4>
<hr />
<div class="container">
        <form enctype="multipart/form-data" method="post" class="row">

            <div class="container row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col">
                <label asp-for="Register.FirstName" class="control-label, col-md-2"></label>
                <div class="col-md-10">
                <input asp-for="Register.FirstName" class="form-control" />
                <span asp-validation-for="Register.FirstName" class="text-danger"></span>
            </div>

            </div>

            <div class="form-group col">
                <label asp-for="Register.LastName" class="control-label"></label>
                <input asp-for="Register.LastName" class="form-control" />
                <span asp-validation-for="Register.LastName" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Register.OtherName" class="control-label"></label>
                <input asp-for="Register.OtherName" class="form-control" />
                <span asp-validation-for="Register.OtherName" class="text-danger"></span>
            </div>
            </div>
            <div class="container row">

            <div class="form-group col">
                <label asp-for="Register.FullName" class="control-label"></label>
                <input asp-for="Register.FullName" class="form-control" />
                <span asp-validation-for="Register.FullName" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Register.DOB" class="control-label"></label>
                <input asp-for="Register.DOB" class="form-control" />
                <span asp-validation-for="Register.DOB" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Register.PhoneNumber" class="control-label"></label>
                <input asp-for="Register.PhoneNumber" class="form-control" />
                <span asp-validation-for="Register.PhoneNumber" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="Register.Email" class="control-label"></label>
                <input asp-for="Register.Email" class="form-control" />
                <span asp-validation-for="Register.Email" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Register.Program" class="control-label"></label>
                <select asp-for="Register.Program" class="form-control" asp-items="@Html.GetEnumSelectList<Programs>();"></select>
                <span asp-validation-for="Register.Program" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Register.Password" class="control-label"></label>
                <input asp-for="Register.Password" class="form-control" />
                <span asp-validation-for="Register.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Register.ConfirmPassword" class="control-label"></label>
                <input asp-for="Register.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
